#!/usr/bin/perl -w

'!(?i:info(?:rmation)?)' => sub {
	my ($trigger, $message, $nick, $address, $target, $server) = @_;

	defined($target) or
		$target = $nick;

	$server->command("msg $target I'm running \"$IRSSI{'name'}\" v$VERSION by: $IRSSI{'authors'}  < http://pikabot.googlecode.com/ >");
	return (1, $trigger, undef, undef, $nick, $address, $target, $server);
}
